#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;
void cargar (int V[MAX],int n);
void mostrar (int V[MAX],int n);
int maxval (int V[MAX], int n);


void main()
{
	int V[MAX],n,opcion,maxvalor;
    do{
	    cout << "=========================================================" << endl;
	    cout << "Ingrese la Cantidad de Elementos que almacenara el vector" << endl;
	    cin  >> n;
	}while(n<=0||n>MAX);
	    
	do {
	    cout << "=========================================================" << endl;
	    cout << "Menu de Algoritmo que halla el maximo valor de un vector." << endl;
	    cout << "1.- Cargar el vector" << endl;
	    cout << "2.- Mostrar el vector " << endl;
	    cout << "3.- Hallar el Maximo valor del vector " << endl;
	    cout << "0.- Salir" << endl;
	    cout << "=========================================================" << endl;
		cout << "Ingrese la opcion: ";
		cin  >> opcion;
		switch (opcion)
		{
		case 1: 
			{
				cargar (V,n);
				break;
			}
		
		case 2:
			{
				mostrar (V,n);
		        break;
			}
		
		case 3:
			{
				maxvalor=maxval (V,n);
				cout << "El valor maximo en el vector es:  " << maxvalor << endl;
				break;
			}
		case 0:
			{
				cout << " Salir " << endl;
				break;
			}
		default:
			{
				cout << " La opcion introducida es invalida " << endl;
				break;
			}
		}
	}while (opcion!=0);
	getch();
}

void cargar (int V[MAX], int n)
{
	int i;
	for (i=0;i<n;i++)
	{
		cout << " V[" << i << "]=  ";
		cin >> V[i];
	}
}

void mostrar (int V[MAX], int n)
{
	int i;
	for (i=0;i<n;i++)
	{
		cout << " V[" << i << "]=  " << V[i] << endl;
	}
}

int maxval (int V[MAX], int n)
{
	int i,may;
	may=V[0];
	for (i=1; i<n; i++)
	{
		if (V[i]>may)
			may=V[i];
	}
	return (may);
}
